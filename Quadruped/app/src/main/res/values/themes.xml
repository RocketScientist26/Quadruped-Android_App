<resources>
    <!-- Base application theme. -->
    <style name="Theme.Quadruped" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- Spinner -->
    <style name="ma_spnr_theme" parent="android:Widget.Spinner">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/ma_spnr_bg</item>
        <item name="android:popupBackground">@null</item>
        <item name="android:dropDownSelector">@null</item>
        <item name="android:colorPressedHighlight">@null</item>
    </style>
</resources>